{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SASS",
            "type": "shell",
            "command": "sass",
            "windows": {
                "args": ["src/assets/scss/index.scss", "public/css/site.css", "--no-source-map", "--watch"]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Typescript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            //"option": "watch",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Watch Typescript",
            "type": "shell",
            "command": "node",
            "windows": {
                "args": ["C:\\Program Files (x86)\\Microsoft SDKs\\TypeScript\\3.6\\tsc.js", "--watch", "-p", "${workspaceFolder}\\tsconfig.json"]
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run IIS Express",
            "type": "process",
            "command": "C:\\Program Files (x86)\\IIS Express\\iisexpress.exe",
            "windows": {
                //"args": ["/config:${wrokspaceFolder}\\.vscode\\applicationhost.config", "/systray:true", "/siteid:1"]
                "args": ["/path:${workspaceFolder}\\public", "/port:8080", "/systray:true"]
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Rollup",
            "type": "shell",
            "command": "rollup",
            "windows": {
                "args": ["-c", "--watch"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}