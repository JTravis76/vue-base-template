{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "module": "ESNEXT",
    "target": "ES5",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noEmit": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}